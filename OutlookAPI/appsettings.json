{
    // IMPORTANT: Make sure to create two separate Azure AD applications:
    // 1. One for Outlook integration
    // 2. One for Teams integration
    // You can do this in Azure Portal under "Azure Active Directory" > "App registrations"

    // Configuration for authenticating with Microsoft Outlook via Azure AD
    "AzureAdOutlook": {
        "ClientId": "YOUR_OUTLOOK_APP_ID", // Application (client) ID from Azure AD (Outlook app)
        "TenantId": "YOUR_TENANT_ID", // Directory (tenant) ID from Azure AD
        "ClientSecret": "YOUR_OUTLOOK_SECRET" // Client secret for Outlook app
    },

    // Configuration for authenticating with Microsoft Teams via Azure AD
    "AzureAdTeams": {
        "ClientId": "YOUR_TEAMS_APP_ID", // Application (client) ID from Azure AD (Teams app)
        "TenantId": "YOUR_TENANT_ID", // Directory (tenant) ID from Azure AD
        "ClientSecret": "YOUR_TEAMS_SECRT" // Client secret for Teams app
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information", 
            "Microsoft.AspNetCore": "Warning" 
        }
    },
    "AllowedHosts": "*"
}
